Host *
  ServerAliveInterval 60

Host */*
  ProxyCommand ssh $(dirname %h) -W $(basename %h):%p

Host raspi
  HostName 192.168.1.100
  User josh
  PubKeyAuthentication yes
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa_personal

